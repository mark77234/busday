<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimobolditalic"
        android:text="BUSDAY"
        android:textColor="@color/orange"
        android:textSize="50sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/select1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/orange"
        android:gravity="center"
        android:text="즐겨찾기"
        android:fontFamily="@font/dohyeon"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="150dp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/select2"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/select2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/orange"
        app:cornerRadius="15dp"
        android:gravity="center"
        android:text="경로검색"
        android:fontFamily="@font/dohyeon"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select1"
        app:layout_constraintBottom_toTopOf="@+id/select3"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/select3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/orange"
        app:cornerRadius="15dp"
        android:gravity="center"
        android:text="주변 정류장"
        android:fontFamily="@font/dohyeon"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select2"
        app:layout_constraintBottom_toTopOf="@id/select4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/select4"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/orange"
        app:cornerRadius="15dp"
        android:gravity="center"
        android:text="설정"
        android:fontFamily="@font/dohyeon"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select3" />



</androidx.constraintlayout.widget.ConstraintLayout>